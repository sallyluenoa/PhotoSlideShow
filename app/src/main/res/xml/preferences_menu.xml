<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/account_info">
        <Preference
            android:key="@string/pref_key_account_name"
            android:title="@string/account_name"
            android:summary="@string/account_name"
            android:selectable="false"
            />
        <Preference
            android:key="@string/pref_key_email_address"
            android:title="@string/email_address"
            android:summary="@string/email_address"
            android:selectable="false"
            />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/settings">
        <Preference
            android:key="@string/pref_key_settings"
            android:title="@string/settings"
            android:selectable="true"
            android:fragment="org.fog_rock.photo_slideshow.app.menu.view.SettingsFragment"
            />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/others">
        <Preference
            android:key="@string/pref_key_app_version"
            android:title="@string/app_version"
            android:selectable="false"
            />
        <Preference
            android:key="@string/pref_key_license_info"
            android:title="@string/license_info"
            android:selectable="true"
            />
        <Preference
            android:key="@string/pref_key_change_user"
            android:title="@string/change_user"
            android:selectable="true"
            />
        <Preference
            android:key="@string/pref_key_sign_out"
            android:title="@string/sign_out"
            android:selectable="true"
            />
    </PreferenceCategory>

</PreferenceScreen>